{
  "rulesFile": "database.rules.json",
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/assets/**",
        "destination": "/assets/**"
      },
      {
        "source": "/topic/**",
        "destination": "/topic/**"
      },
      {
        "source": "/question/**",
        "destination": "/question/**"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
